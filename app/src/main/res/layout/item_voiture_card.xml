<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    style="@style/CarSpotter.Card"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image de la voiture -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/car_image_height">

            <ImageView
                android:id="@+id/image_voiture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Photo de la voiture"
                tools:src="@drawable/ic_car_placeholder" />

            <!-- Overlay avec informations -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradient_overlay"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small">

                <!-- Icône favori -->
                <ImageView
                    android:id="@+id/icon_favorite"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/ic_favorite"
                    android:tint="@color/car_favorite"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/spacing_small" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_marque"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        tools:text="Peugeot" />

                    <TextView
                        android:id="@+id/text_modele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_small"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        tools:text="308 GT-Line" />

                </LinearLayout>

                <!-- Compteur de photos -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/photo_count_background"
                    android:paddingHorizontal="@dimen/spacing_small"
                    android:paddingVertical="@dimen/spacing_tiny">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_camera"
                        android:tint="@android:color/white"
                        android:layout_marginEnd="@dimen/spacing_tiny" />

                    <TextView
                        android:id="@+id/text_photo_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_caption"
                        android:textStyle="bold"
                        tools:text="3" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <!-- Informations détaillées -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/type_badge_background"
                android:paddingHorizontal="@dimen/spacing_small"
                android:paddingVertical="@dimen/spacing_tiny"
                android:textColor="@color/car_primary"
                android:textSize="@dimen/text_size_caption"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_small"
                tools:text="Berline" />

            <TextView
                android:id="@+id/text_immatriculation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_tiny"
                tools:text="AB-123-CD" />

            <TextView
                android:id="@+id/text_couleur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:layout_marginBottom="@dimen/spacing_tiny"
                android:drawableStart="@drawable/ic_palette"
                android:drawablePadding="@dimen/spacing_tiny"
                android:gravity="center_vertical"
                tools:text="Bleu métallisé" />

            <TextView
                android:id="@+id/text_lieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="@dimen/spacing_tiny"
                android:gravity="center_vertical"
                tools:text="Paris" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
