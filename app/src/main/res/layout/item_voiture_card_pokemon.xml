<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    style="@style/CarSpotter.Card.Pokemon"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/pokemon_card_background">

        <!-- En-tête style Pokémon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_medium"
            android:background="@drawable/pokemon_header_background">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_marque_modele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    tools:text="Peugeot 308" />

                <TextView
                    android:id="@+id/text_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:alpha="0.9"
                    tools:text="GT-Line" />

            </LinearLayout>

            <!-- Badge de rareté/type et POINTS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Points de rareté (nouveau) -->
                <TextView
                    android:id="@+id/text_rarity_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/points_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    tools:text="1250 PTS" />

                <TextView
                    android:id="@+id/text_type_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/type_badge_pokemon"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="HYPERCAR" />

                <!-- Badge de rareté (nouveau) -->
                <TextView
                    android:id="@+id/text_rarity_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    tools:text="🏆" />

            </LinearLayout>

        </LinearLayout>

        <!-- Image principale style Pokémon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/pokemon_image_background">

            <ImageView
                android:id="@+id/image_voiture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Photo de la voiture"
                tools:src="@drawable/ic_car_placeholder" />

            <!-- Overlay avec plaque d'immatriculation -->
            <TextView
                android:id="@+id/text_plaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:background="@drawable/plaque_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                tools:text="AB-123-CD" />

            <!-- Compteur de photos en bas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_margin="12dp"
                android:background="@drawable/photo_count_pokemon"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_camera"
                    android:tint="@android:color/white"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/text_photo_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="3" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Stats section style Pokémon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium"
            android:background="@drawable/pokemon_stats_background">

            <!-- Titre Stats -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CARACTÉRISTIQUES"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/car_primary"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:letterSpacing="0.1" />

            <!-- Grid des stats -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="4">

                <!-- Couleur -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/stat_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COULEUR"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/text_couleur_stat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        tools:text="Bleu" />

                </LinearLayout>

                <!-- Année -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/stat_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ANNÉE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/text_annee_stat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        tools:text="2023" />

                </LinearLayout>

                <!-- Moteur -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/stat_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MOTEUR"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/text_moteur_stat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        tools:text="1.2 Turbo" />

                </LinearLayout>

                <!-- Puissance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/stat_background"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PUISSANCE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/text_puissance_stat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:gravity="center"
                        android:layout_marginTop="4dp"
                        tools:text="130 ch" />

                </LinearLayout>

            </GridLayout>

            <!-- Lieu et date d'observation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/observation_background"
                android:padding="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:tint="@color/car_primary"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_lieu_observation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        tools:text="Paris, France" />

                    <TextView
                        android:id="@+id/text_date_observation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/text_secondary"
                        tools:text="Observé le 15/12/2023" />

                </LinearLayout>

                <!-- Bouton favori -->
                <ImageView
                    android:id="@+id/icon_favorite_toggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_favorite_border"
                    android:tint="@color/car_favorite"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Tags style Pokémon -->
            <LinearLayout
                android:id="@+id/layout_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <!-- Les tags seront ajoutés dynamiquement -->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
